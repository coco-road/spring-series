<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <bean id="singleton" class="com.coco.lesson001.demo4.BeanScopeModel" scope="singleton">
        <constructor-arg index="0" value="singleton"/>
    </bean>

    <bean id="prototypeBean" class="com.coco.lesson001.demo4.BeanScopeModel" scope="prototype">
        <constructor-arg index="0" value="prototype"/>
    </bean>


</beans>